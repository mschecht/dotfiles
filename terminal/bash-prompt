#----------------
# Terminal prompt
#----------------
# Variables
export RED="\[\033[0;31m\]"
export BOLD_RED="\[\033[1;31m\]"
export YELLOW="\[\033[0;33m\]"
export GREEN="\[\033[0;32m\]"
export COLOR_d="\[\033[0;34m\]"
export COLOR_DEFAULT="\[\e[0m\]"
export PROMPT_DIRTRIM=8
export TIME="\t"
export USER="\u"
export HOST="\h"
export REL_DIR='\W'
export WD="\w" # working directory
export WD_relative="$(basename $WD)"
export GITAWAREPROMPT=~/.bash/git-aware-prompt # add git-aware-prompt here. credit: https://github.com/jimeh/git-aware-prompt
source "${GITAWAREPROMPT}/main.sh"


# Highlight the hostname when connected via SSH.
if [[ "${SSH_TTY}" ]]; 
then
	HOSTSTYLE="${BOLD_RED}";
else
	HOSTSTYLE="${GREEN}";
fi;

# Prompt layout
PS1=
PS1+="$RED[$TIME] " # time
PS1+="$YELLOW[$USER@" # username
PS1+="$HOSTSTYLE$HOST$YELLOW:" # host
#PS1+="$RED$WD_relative$YELLOW] ðŸŒ´" # working directory
#PS1+="$RED$REL_DIR$YELLOW]$GREEN\$GIT  ðŸŒ´" # working directory + GIT
PS1+="$RED$REL_DIR$YELLOW]$GREEN \$git_branch  ðŸŒ´" # working directory + GIT
PS1+=" $COLOR_DEFAULT" # output

export PS1
